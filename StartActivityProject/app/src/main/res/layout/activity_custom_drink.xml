<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCustomDrink"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Name your healthy recipe:"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/namee"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Write here your recipe:"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ingredient 1"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/firstt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ingredient 2"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/secondd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ingredient 3"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/thirdd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ingredient 4"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/fourthh"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ingredient 5"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_weight="50"/>
        <EditText
            android:id="@+id/fifthh"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/slika"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sest"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/changePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change photo"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"/>
            <Button
                android:id="@+id/cameraPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a picture"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/createe"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Create"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="270dp"
        />


</LinearLayout>